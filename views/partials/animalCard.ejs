<div onclick="loadPetPage(this.id)" id=<%=pet.id%> class="max-w-sm sm:max-w-md md:max-w-md lg:max-w-lg h-96 bg-white rounded-lg overflow-hidden shadow-md hover:cursor-pointer">
    <div class="h-2/3 overflow-hidden">
        <img class="w-full h-full object-cover load-lazy" src="images/placeholder.jpg" alt="<%pet.name%>" data-src=<%=pet.images[0]%>>
    </div>
    <div class="flex p-4 h-1/3">
        <div class="flex-1">
            <ul>
                <li><h4 class="text-lg font-semibold"><%=pet.name %> <%=pet.age %></h4></li>
                <li><h5 class="text-sm"><%=pet.breed %></h5></li>
                <li><h5 class="text-sm"><%=pet.location.city %></h5></li>
            </ul>
        </div>
        <div class="flex-1 text-right">
            <h4 class="text-sm"><%=pet.dateAdded %></h4>
        </div>
    </div>
</div>