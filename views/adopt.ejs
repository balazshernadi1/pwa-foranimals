<div class="mx-4 flex flex-col justify-center gap-12">
    <h1 class="text-center text-3xl lg:text-5xl font-extrabold mt-4">Find Your Next Companion</h1>

    <%- include('partials/filter.ejs', { species: species, colours: colours, features: features }) %>

    <section class="flex flex-col justify-center items-center gap-6">
        <% if (animals[0] == null) { %>
            <div class="    flex flex-col justify-center items-center gap-5 text-center">
                <svg class="w-24 h-24 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path d="M175.9 448c-35-.1-65.5-22.6-76-54.6C67.6 356.8 48 308.7 48 256C48 141.1 141.1 48 256 48s208 93.1 208 208s-93.1 208-208 208c-28.4 0-55.5-5.7-80.1-16zM0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM128 369c0 26 21.5 47 48 47s48-21 48-47c0-20-28.4-60.4-41.6-77.7c-3.2-4.4-9.6-4.4-12.8 0C156.6 308.6 128 349 128 369zm128-65c-13.3 0-24 10.7-24 24s10.7 24 24 24c30.7 0 58.7 11.5 80 30.6c9.9 8.8 25 8 33.9-1.9s8-25-1.9-33.9C338.3 320.2 299 304 256 304zm47.6-96a32 32 0 1 0 64 0 32 32 0 1 0 -64 0zm-128 32a32 32 0 1 0 0-64 32 32 0 1 0 0 64z" />
                </svg>
                <p class="text-lg font-medium text-gray-600">Sorry, there are no animals matching your criteria</p>
                <a href="/adopt" class="text-yellow-500 font-semibold hover:underline">Reset Filters</a>
            </div>
        <% }else{ %>
            <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 motion-preset-expand">
                <% animals.forEach(element => { %>
                    <%- include('partials/animalCard', { pet: element }) %>
                <% }) %>    
            </div>
            <%}%>

        <div class="flex justify-center items-center mt-8 mb-6 w-full gap-3 sm:gap-6 md:gap-8 lg:gap-12 xl:gap-14">
            <% if (previousPage) { %>
                <a class="p-2 md:p-4  bg-yellow-500 rounded-full" href="" onclick="buildQueryParam(null, 'page', '<%=currentPage-1%>')"><svg class="w-4 md:w-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M11.7071 4.29289C12.0976 4.68342 12.0976 5.31658 11.7071 5.70711L6.41421 11H20C20.5523 11 21 11.4477 21 12C21 12.5523 20.5523 13 20 13H6.41421L11.7071 18.2929C12.0976 18.6834 12.0976 19.3166 11.7071 19.7071C11.3166 20.0976 10.6834 20.0976 10.2929 19.7071L3.29289 12.7071C3.10536 12.5196 3 12.2652 3 12C3 11.7348 3.10536 11.4804 3.29289 11.2929L10.2929 4.29289C10.6834 3.90237 11.3166 3.90237 11.7071 4.29289Z" fill="#000000"/>
                    </svg></a>
            <% } %>

            <div class="flex gap-3 sm:gap-5 md:gap-8 lg:gap-12 xl:gap-14">
                <% for (let index = startPage - 1; index < endPage; index++) { %>
                    <a class="px-3 py-2 bg-yellow-500 rounded-full text-sm md:text-lg md:px-4 md:py-3 hover:bg-yellow-300" id="p<%=index+1%>" href="#" onclick="buildQueryParam(null, 'page', '<%=index+1%>')"><%=index+1%></a>
                <% } %>
            </div>

            <% if (nextPage) { %>
                <a class="p-2 md:p-4 bg-yellow-500 rounded-full" href="" onclick="buildQueryParam(null, 'page', '<%=currentPage+1%>')"><svg class="w-4 md:w-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M12.2929 4.29289C12.6834 3.90237 13.3166 3.90237 13.7071 4.29289L20.7071 11.2929C21.0976 11.6834 21.0976 12.3166 20.7071 12.7071L13.7071 19.7071C13.3166 20.0976 12.6834 20.0976 12.2929 19.7071C11.9024 19.3166 11.9024 18.6834 12.2929 18.2929L17.5858 13H4C3.44772 13 3 12.5523 3 12C3 11.4477 3.44772 11 4 11H17.5858L12.2929 5.70711C11.9024 5.31658 11.9024 4.68342 12.2929 4.29289Z" fill="#000000"/>
                    </svg></a>
            <% } %>
        </div>
    </section>
</div>

<script src="/js/handler.js"></script>