<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-yellow-300 via-yellow-400 to-yellow-500 p-4">
    <div id="register-feedback" class="hidden w-full max-w-md mb-4 p-3 text-center bg-white text-red-600 rounded-lg font-semibold motion-preset-pop"></div>
  <div class="w-full max-w-lg bg-white shadow-2xl rounded-lg p-6">
      <h1 class="text-center text-3xl font-bold text-gray-800 mb-6">Create Your Account</h1>

      <form action="" class="flex flex-col gap-6" id="registerForm">
          <div class="flex flex-col gap-2">
              <label for="username" class="text-gray-700 font-medium">Username</label>
              <input type="text" required pattern="^[a-zA-Z0-9_]{5,15}$" name="username" id="usern"
                  placeholder="Choose a username"
                  class="block w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-400">
          </div>

      
          <div class="flex flex-col gap-2">
              <label for="password" class="text-gray-700 font-medium">Password</label>
              <input type="password" required pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$" name="password" id="pass"
                  placeholder="Enter a strong password"
                  class="block w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-400">
          </div>

          <div class="flex flex-col gap-2">
              <label for="password" class="text-gray-700 font-medium">Confirm Password</label>
              <input type="password" required name="password" id="pass-conf" placeholder="Re-enter your password"
                  class="block w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-400">
          </div>

          <div id="criteria" class="hidden">
            <ul class="space-y-1">
                <li class="flex items-center" id="uppercaseCriteria">
                    <svg class="h-6 w-6 flex-none fill-red-100 stroke-red-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="11" />
                        <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none" />
                      </svg>
                    <span class="ml-2 text-red-600">At least one uppercase character</span>
                </li>
                <li class="flex items-center" id="lowercaseCriteria">
                    <svg class="h-6 w-6 flex-none fill-red-100 stroke-red-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="11" />
                        <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none" />
                      </svg>
                    <span class="ml-2 text-red-600">At least one lowercase character</span>
                </li>
                <li class="flex items-center" id="numberCriteria">
                    <svg class="h-6 w-6 flex-none fill-red-100 stroke-red-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="11" />
                        <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none" />
                      </svg>
                    <span class="ml-2 text-red-600">At least one number</span>
                </li>
                <li class="flex items-center" id="specialCriteria">
                    <svg class="h-6 w-6 flex-none fill-red-100 stroke-red-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="11" />
                        <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none" />
                      </svg>
                    <span class="ml-2 text-red-600">At least one special character</span>
                </li>
                <li class="flex items-center" id="lengthCriteria">
                    <svg class="h-6 w-6 flex-none fill-red-100 stroke-red-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="11" />
                        <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none" />
                      </svg>
                    <span class="ml-2 text-red-600">At least 8 characters long</span>
                </li>
                <li class="hidden items-center" id="matchCriteria">
                    <svg class="h-6 w-6 flex-none fill-red-100 stroke-red-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="11" />
                        <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none" />
                      </svg>
                    <span class="ml-2 text-red-600">Passwords match</span>
                </li>
            </ul>
          </div>

          <button type="submit"
              class="w-full py-3 bg-yellow-500 hover:bg-yellow-600 transition-all duration-300 text-white font-bold rounded-lg shadow-md">
              Register
          </button>
      </form>

      <div class="text-center mt-8">
          <p class="text-gray-700">Already have an account?</p>
          <a href="/login"
              class="inline-block mt-4 px-6 py-2 bg-yellow-500 hover:bg-yellow-600 transition-all duration-300 text-white font-bold rounded-lg shadow-md">
              Login Now
          </a>
      </div>
  </div>
</div>

<script src="/js/userHandler.js"></script>


